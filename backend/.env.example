NODE_ENV=development
PORT=8080
TRUST_PROXY=false

# Comma-separated list of allowed origins for browser requests.
CORS_ALLOW_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Security auth for protected endpoints.
REQUIRE_API_KEY=true
API_KEY=replace-with-strong-random-key

# Request and rate limits.
MAX_BODY_SIZE=16kb
GLOBAL_RATE_LIMIT_MAX=120
GLOBAL_RATE_LIMIT_WINDOW_MS=900000
PREDICT_RATE_LIMIT_MAX=60
PREDICT_RATE_LIMIT_WINDOW_MS=900000
CHAT_RATE_LIMIT_MAX=20
CHAT_RATE_LIMIT_WINDOW_MS=900000
REQUEST_TIMEOUT_MS=10000

# OpenAI settings.
OPENAI_API_KEY=replace-with-openai-key
OPENAI_MODEL=gpt-5-mini
OPENAI_TIMEOUT_MS=45000
OPENAI_MAX_OUTPUT_TOKENS=1000

# Logging and data paths.
LOG_SALT=replace-with-random-log-salt
TRAIN_DATA_PATH=../DATA/train.csv
